{
  "manifest_version": 3,
  "name": "Echo - Privacy Dashboard",
  "version": "1.0.0",
  "description": "User Online Data Reflection and Analysis Tool",
  "permissions": [
    "storage",
    "alarms",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "easylist_rules",
        "enabled": true,
        "path": "rules/easylist_rules.json"
      },
      {
        "id": "easyprivacy_rules",
        "enabled": true,
        "path": "rules/easyprivacy_rules.json"
      },
      {
        "id": "annoyances_rules",
        "enabled": false,
        "path": "rules/annoyances_rules.json"
      },
      {
        "id": "exception_rules",
        "enabled": true,
        "path": "rules/exception_rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/adblocker-main.js"],
      "run_at": "document_start",
      "all_frames": true,
      "world": "MAIN"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["assets/adblocker-isolated.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["<all_urls>"],
      "js": ["assets/cookiebanner.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://generativelanguage.googleapis.com http://localhost:3000"
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "dashboard.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "rules/cosmetic-generic.css",
        "rules/cosmetic-domains.json"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}